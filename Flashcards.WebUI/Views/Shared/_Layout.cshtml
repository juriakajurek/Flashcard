<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Flashcards</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="text-center">
    <div class="h-100 w-100">
        <div class="navbar navbar-expand-lg navbar-light bg-light">
            @Html.ActionLink("Flashcards", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    @Html.ActionLink("Add word", "Index", "Home", null, new { @class = "nav-item nav-link" })
                    @Html.ActionLink("View words", "Index", "Home", null, new { @class = "nav-item nav-link" })
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-item nav-link" })
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

        <div class="cover-container w-100 h-75">
            @RenderBody()
            <footer>
            </footer>
        </div>


    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
